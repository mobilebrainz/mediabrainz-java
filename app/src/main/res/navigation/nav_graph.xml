<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="app.mediabrainz.fragments.StartFragment"
        android:label="@string/start_fragment_label"
        tools:layout="@layout/start_fragment"/>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="app.mediabrainz.fragments.AboutFragment"
        android:label="@string/about_fragment_label"
        tools:layout="@layout/about_fragment"/>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="app.mediabrainz.fragments.SettingsFragment"
        android:label="@string/settings_fragment_label"/>
    <fragment
        android:id="@+id/loginFragment"
        android:name="app.mediabrainz.fragments.LoginFragment"
        android:label="@string/login_fragment_label"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_loginFragment_to_startFragment"
            app:destination="@id/startFragment"/>
    </fragment>

</navigation>